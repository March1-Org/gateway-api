{
  "name": "@march1-org/microservice-template",
  "publishConfig": {
    "@march1-org:registry": "https://npm.pkg.github.com"
  },
  "version": "1.0.2",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": {
      "types": "./dist/db/schema/index.d.ts",
      "import": "./dist/db/schema/index.js"
    },
    "./users": {
      "types": "./dist/db/schema/users.d.ts"
    }
  },
  "scripts": {
    "start": "bun run ./src/index.ts",
    "dev": "docker compose up -d db cache && bun run db:migrate && bun run --watch src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "build:npm": "bun build --target=node ./src/index.ts --outfile=dist/index.js && bun build --target=node ./src/db/schema/index.ts --outfile=dist/db/schema/index.js && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "postbuild": "rimraf tsconfig.types.tsbuildinfo",
    "publish:build": "bun run build:npm && bun publish --registry https://npm.pkg.github.com",
    "test:integrated": "bash ./test/setup.sh && bun test && bash ./test/teardown.sh",
    "lint": "eslint src && prettier src --check --config ./.prettierrc",
    "prettify": "prettier src --write"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.2.0",
    "@elysiajs/jwt": "^1.2.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "drizzle-typebox": "^0.3.0",
    "elysia": "^1.2.24",
    "ioredis": "^5.6.0",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bun": "^1.2.4",
    "@types/pg": "^8.11.11",
    "bun-types": "latest",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.23.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.0.0",
    "prettier": "3.5.3",
    "rimraf": "^6.0.1",
    "typescript-eslint": "^8.28.0"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/db/index.js",
    "dist/db/schema/**/*"
  ]
}
